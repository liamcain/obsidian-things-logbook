{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
